<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:l="/lib/layout" xmlns:p="/lib/hudson/project">
    <l:header title="${it.name}"/>
    <l:side-panel>
        <l:tasks>
            <j:set var="url" value="${h.getNearestAncestorUrl(request,it)}"/>
            <j:choose>
                <j:when test="${it.parent==app}">
                    <l:task icon="icon-up icon-md" href="${rootURL}/" title="${%Back to Dashboard}" contextMenu="false"/>
                </j:when>
                <j:otherwise>
                    <l:task icon="icon-up icon-md" href="${url}/../../" title="${%Up}" contextMenu="false"/>
                </j:otherwise>
            </j:choose>
            <l:task icon="icon-search icon-md"  href="${url}/" title="${%Status}" contextMenu="false"/>
            <l:task icon="icon-notepad icon-md" href="${url}/changes" title="${%Changes}"/>
            <p:configurable/>
            <st:include page="actions.jelly"/>
        </l:tasks>
        <j:forEach var="w" items="${it.widgets}">
            <st:include it="${w}" page="index.jelly"/>
        </j:forEach>
    </l:side-panel>
</j:jelly>
